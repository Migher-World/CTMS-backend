doctype html
html
    head
        style
            | body {
            |   font-family: Arial, sans-serif;
            |   background-color: #f5f5f5;
            |   margin: 0;
            |   padding: 0;
            | }
            |
            | .container {
            |   max-width: 600px;
            |   margin: 0 auto;
            |   padding: 20px;
            |   background-color: #ffffff;
            |   border-radius: 5px;
            |   box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
